{
    "search.quickOpen.includeHistory": false,
    "workbench.colorTheme": "Horizon Italic",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.statusBar.feedback.visible": false,
    "workbench.editor.focusRecentEditorAfterClose": false,
    "workbench.tree.renderIndentGuides": "none",
    "workbench.colorCustomizations": {
        "editorIndentGuide.activeBackground": "#888888"
    },
    "breadcrumbs.enabled": false,
    "diffEditor.ignoreTrimWhitespace": false,
    "diffEditor.renderSideBySide": true,
    "editor.cursorSmoothCaretAnimation": true,
    "editor.fontFamily": "'Iosevka', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontLigatures": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.renderWhitespace": "boundary",
    "editor.suggest.localityBonus": true,
    "editor.tabSize": 2,
    "editor.wordWrap": "on",
    "editor.wrappingIndent": "indent",
    "explorer.confirmDragAndDrop": false,
    "explorer.openEditors.visible": 0,
    "files.associations": {
        "*.tpp": "cpp"
    },
    "files.exclude": {
        "**/.git": false
    },
    "files.enableTrash": false,
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "git.autofetch": true,
    "eslint.packageManager": "yarn",
    "C_Cpp.clang_format_style": "{ BasedOnStyle: LLVM, UseTab: false, IndentWidth: 2, BreakBeforeBraces: Allman, AllowShortIfStatementsOnASingleLine: false, AllowShortBlocksOnASingleLine: false, AllowShortFunctionsOnASingleLine: Empty, AllowShortLoopsOnASingleLine: false, AlwaysBreakTemplateDeclarations: true, IndentCaseLabels: false, ColumnLimit: 80 }",
    "html.autoClosingTags": false,
    "html.format.extraLiners": "",
    "html.format.indentInnerHtml": true,
    "python.formatting.provider": "black",
    "prettier.eslintIntegration": true,
    "extensions.ignoreRecommendations": false,
    "liveshare.nameTagVisibility": "Never",
    "liveshare.openSharedServers": false,
    "liveshare.populateGitCoAuthors": "always",
    "prettier.requireConfig": true,
    "cSpell.language": "en",
    "cSpell.userWords": [
        "convolutional",
        "discriminative",
        "icosahedron",
        "taha",
        "vasowalla"
    ],
    "cSpell.allowCompoundWords": true,
    "java.errors.incompleteClasspath.severity": "ignore",
    "latex-workshop.latex.tools": [
        {
            "name": "latexmk",
            "command": "latexmk",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "-shell-escape",
                "-pdf",
                "%DOC%"
            ]
        },
        {
            "name": "pdflatex",
            "command": "pdflatex",
            "args": [
                "-synctex=1",
                "-interaction=nonstopmode",
                "-file-line-error",
                "%DOC%"
            ]
        },
        {
            "name": "bibtex",
            "command": "bibtex",
            "args": [
                "%DOCFILE%"
            ]
        }
    ],
    "latex-workshop.latexindent.args": [
        "-c",
        "%DIR%/",
        "%TMPFILE%",
        "-y",
        "defaultIndent: '%INDENT%'"
    ],
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.message.update.show": false,
    "latex-workshop.latex.autoClean.run": "onBuilt",
    "latex-workshop.intellisense.citation.label": "title",
    "latex-workshop.intellisense.citation.type": "browser",
    "latex-workshop.progress.runIconType": "Solid Circled",

    "[python]": {
        "editor.tabSize": 4
    },
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[javascript]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[json]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "[cpp]": {
        "editor.defaultFormatter": "ms-vscode.cpptools"
    },
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}
