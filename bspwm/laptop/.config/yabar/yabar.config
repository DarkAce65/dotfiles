bar-list = ["bar1"];

bar1: {
	font: "Terminusmod, FontAwesome 10";
	block-list: ["title", "workspaces", "battery", "disk", "date"];
	position: "top";
	height: 30;
	background-color-rgb: 0x111111;

	gap-horizontal: 20;
	gap-vertical: 15;
	underline-size: 2;
	overline-size: 0;
	slack-size: 10;

	title: {
		exec: "~/.config/yabar/scripts/title.sh";
		type: "persist";

		align: "left";
		fixed-size: 300;
		foreground-color-rgb: 0xe0e0e0;
		background-color-rgb: 0x111111;
		underline-color-rgb: 0x27aac4;
	}
	workspaces: {
		exec: "~/.config/yabar/scripts/workspaces.sh";
		type: "persist";
		pango-markup: true;
		command-button4: "bspc desktop -f prev";
		command-button5: "bspc desktop -f next";

		align: "center";
		fixed-size: 200;
		foreground-color-rgb: 0xe0e0e0;
		background-color-rgb: 0x111111;
	}
	battery: {
		exec: "~/.config/yabar/scripts/battery.sh";
		type: "periodic";
		interval: 1;

		align: "right";
		fixed-size: 60;
		foreground-color-rgb: 0xe0e0e0;
		background-color-rgb: 0x111111;
		underline-color-rgb: 0x606060;
	}
	disk: {
		exec: "~/.config/yabar/scripts/disk.sh";
		type: "periodic";
		interval: 7200;

		align: "right";
		fixed-size: 60;
		foreground-color-rgb: 0xe0e0e0;
		background-color-rgb: 0x111111;
		underline-color-rgb: 0x37aaba;
	}
	date: {
		exec: "YABAR_DATE";
		internal-option1: "%A, %b %e %Y %l:%M %p";
		type: "periodic";
		interval: 2;
		command-button1: "~/.config/yabar/scripts/calendar.sh";

		align: "right";
		fixed-size: 250;
		foreground-color-rgb: 0xe0e0e0;
		underline-color-rgb: 0x1b95ad;
	}
}
