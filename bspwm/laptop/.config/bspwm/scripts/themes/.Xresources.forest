! Rofi configuration
! ------------------
rofi.fullscreen: true
rofi.padding: 250
rofi.bw: 0
rofi.font: Sansation 18
rofi.color-enabled: true
rofi.separator-style: solid

rofi.color-window: argb:cc000000, #00b64d, #00b64d
rofi.color-normal: argb:0000000, #888888, argb:0000000, argb:0000000, #00b64d
rofi.color-active: argb:0000000, #00b64d, argb:0000000, #00b64d, #000000
rofi.color-urgent: argb:0000000, #a13c18, argb:0000000, #a13c18, #000000

! URxvt configuration
! -------------------
URxvt.font: xft:Iosevka Term:size=9
URxvt.geometry: 80x20
URxvt.scrollBar: false
URxvt.urgentOnBell: true
URxvt.lineSpace: 2
URxvt.internalBorder: 15

! Transparency
URxvt.depth: 32

*foreground:    #9ef7b2
*background:    #0a150f
*cursorColor:   #9ef7b2

URxvt*color0:   #003d19
URxvt*color1:   #a15918
