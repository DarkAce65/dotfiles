! Rofi configuration
! ------------------
rofi.fullscreen: true
rofi.padding: 250
rofi.bw: 0
rofi.font: Sansation 18
rofi.color-enabled: true
rofi.separator-style: solid

rofi.color-window: argb:cc1c1010, #fd7e49, #fd7e49
rofi.color-normal: argb:0000000, #888888, argb:0000000, argb:0000000, #fd7e49
rofi.color-active: argb:0000000, #fd7e49, argb:0000000, #fd7e49, #1c1010
rofi.color-urgent: argb:0000000, #a021ce, argb:0000000, #a021ce, #1c1010

! URxvt configuration
! -------------------
URxvt.font: xft:Iosevka Term:size=9
URxvt.geometry: 80x20
URxvt.scrollBar: false
URxvt.urgentOnBell: true
URxvt.lineSpace: 2
URxvt.internalBorder: 15

! Transparency
URxvt.depth: 32

*foreground:    #fedac4
*background:    #1c1010
*cursorColor:   #fedac4

URxvt*color0:   #3f134d
