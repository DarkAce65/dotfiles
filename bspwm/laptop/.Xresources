! Rofi configuration
! ------------------
rofi.lines: 8
rofi.width: 45
rofi.padding: 35
rofi.bw: 2
rofi.font: Sansation 16

rofi.color-enabled: true
rofi.separator-style: solid
rofi.color-window: #26201d, argb:bbe25100, argb:cce25100
rofi.color-normal: argb:0000000, #fa8600, argb:0000000, #fa8600, #26201d
rofi.color-active: argb:0000000, #889940, argb:0000000, #889940, #26201d
rofi.color-urgent: argb:0000000, #9e4537, argb:0000000, #9e4537, #26201d

! URxvt configuration
! -------------------
URxvt.font: xft:PragmataPro:style=bold:pixelsize=13
URxvt.scrollBar: false
URxvt.urgentOnBell: true
URxvt.lineSpace: 1
URxvt.letterSpace: -1
URxvt.internalBorder: 15

! Transparency
URxvt.depth: 32

*foreground:    #ffffff
*background:    #111111
*cursorColor:   #d3d0c8

URxvt*color0:   #202020
