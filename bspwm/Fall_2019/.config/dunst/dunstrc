[global]
    monitor = 0
    follow = mouse
    geometry = "400x10-50-110"
    frame_width = 2
    separator_height = 1
    separator_color = auto
    padding = 8
    horizontal_padding = 8
    idle_threshold = 40
    sort = no

    font = Iosevka 10
    markup = full
    format = "<b>%s</b>\n%b"
    show_age_threshold = 60
    word_wrap = yes

    dmenu = /usr/bin/rofi -dmenu -p dunst:
    browser = xdg-open
    corner_radius = 3

    mouse_left_click = do_action
    mouse_middle_click = close_all
    mouse_right_click = close_current

[shortcuts]
    close = mod1+space
    close_all = mod1+shift+space
    history = mod1+grave
    context = mod1+shift+grave

[urgency_low]
    background = "#8b96b0"
    foreground = "#1d2026"
    frame_color = "#8b96b0"
    timeout = 6

[urgency_normal]
    background = "#8b96b0"
    foreground = "#1d2026"
    frame_color = "#8b96b0"
    timeout = 6

[urgency_critical]
    background = "#c0480b"
    foreground = "#ffffff"
    frame_color = "#c0480b"
    timeout = 30
