[global]
    monitor = 0
    follow = mouse
    geometry = "400x10-100+100"
    frame_width = 2
    separator_height = 2
    separator_color = auto
    padding = 8
    horizontal_padding = 8
    idle_threshold = 40
    sort = no

    font = Iosevka 10
    markup = full
    format = "<b>%s</b>\n%b"
    show_age_threshold = 60
    word_wrap = yes

    dmenu = /usr/bin/rofi -dmenu -p dunst:
    browser = xdg-open
    corner_radius = 0

    mouse_left_click = do_action
    mouse_middle_click = close_all
    mouse_right_click = close_current

[shortcuts]
    close = mod1+space
    close_all = mod1+shift+space
    history = mod1+grave
    context = mod1+shift+grave

[urgency_low]
    background = "#ffffff"
    foreground = "#000000"
    frame_color = "#ffffff"
    timeout = 6

[urgency_normal]
    background = "#ffffff"
    foreground = "#000000"
    frame_color = "#ffffff"
    timeout = 6

[urgency_critical]
    background = "#e84f4f"
    foreground = "#ffffff"
    frame_color = "#e84f4f"
    timeout = 30
